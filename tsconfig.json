{
	"include": ["src"],
	"compilerOptions": {
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"module": "ESNext",
		"moduleResolution": "node",
		"isolatedModules": true,

		"target": "ES6",
		"inlineSourceMap": true,
		"inlineSources": true,
		"importHelpers": true,
		"jsx": "react-jsx",

		"strict": true,
		"allowJs": false,
		"noImplicitAny": true,
		"strictNullChecks": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	}
}
