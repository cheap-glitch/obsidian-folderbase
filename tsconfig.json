{
	"include": [
		"src"
	],
	"compilerOptions": {
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		],

		"lib": [
			"DOM",
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"isolatedModules": true,

		"target": "ES6",
		"inlineSourceMap": true,
		"inlineSources": true,
		"importHelpers": true,
		"jsx": "react-jsx",

		"strict": true,
		"allowJs": false,
		"noImplicitAny": true,
		"strictNullChecks": true,

		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	}
}
